<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AddressbookMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AddressbookMobileApp"
    xmlns:pages="clr-namespace:AddressbookMobileApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AddressbookMobileApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Contacts"
        ContentTemplate="{DataTemplate pages:ListPage}"
        Route="ListPage"/>
    <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate pages:SearchPage}"
        Route="SearchPage"/>
    <ShellContent
         Title="Add"
         ContentTemplate="{DataTemplate pages:AddPage}"
         Route="AddPage"/>
    <ShellContent
         Title="Remove"
         ContentTemplate="{DataTemplate pages:RemovePage}"
         Route="RemovePage"/>
    <ShellContent
         Title="Update"
         ContentTemplate="{DataTemplate pages:UpdatePage}"
         Route="UpdatePagePage"/>
    <ShellContent
         Title="Exit"
         ContentTemplate="{DataTemplate pages:ExitPage}"
         Route="ExitPage"/>


</Shell>
