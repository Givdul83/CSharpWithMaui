<?xml version="1.0" encoding="UTF-8" ?>
<
    x:Class="MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApp"
    Shell.FlyoutBehavior="Disabled"
    Title="MobileApp">
    <Shell
        <ShellContent
        Title="Home"
        Route="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"/>

    <ShellContent
        Title="List"
        Route="ShowListPage" 
        ContentTemplate="{DataTemplate local:ShowListPage}" />


    <ShellContent
         Title="Search"
         Route="SearchPage" 
         ContentTemplate="{DataTemplate local:SearchPage}"/>
              

    <ShellContent
        Title="Add"
        Route="AddPage" 
        ContentTemplate="{DataTemplate local:AddPage}"/>


        <ShellContent
        Title="Remove"
        Route="RemovePage"
        ContentTemplate="{DataTemplate local:RemovePage}"/>
        
        <ShellContent
        Title="Update"
        Route="UpdatePage" 
        ContentTemplate="{DataTemplate local:UpdatePage}"/>

    <ShellContent
        Title="Quit"
        Route="QuitPage"
        ContentTemplate="{DataTemplate local:QuitPage}"
       />
/>
